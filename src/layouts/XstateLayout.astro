---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import { ArrowLeftOutlined } from '@mui/icons-material';
import Layout from './Layout.astro';
---

<Layout title={title}>
  <script is:inline>
    /* inline: relative & npm package imports are not supported. */
    window.goBack = () => {
      window.history.back();
    };
  </script>
  <div class="flex flex-col gap-8">
    <button
      onclick="window.goBack()"
      type="button"
      class="inline-flex w-fit px-4 py-2 border border-transparent text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500"
    >
      <ArrowLeftOutlined className="-ml-1 mr-2 h-5 w-5" aria-hidden="true" />
      Back to list
    </button>
    <iframe data-xstate class="w-full aspect-video"></iframe>
    <slot />
  </div>
</Layout>
